{
  "ConnectionStrings": {
    // Examples of ConnectionStrings
    "MSSQLConnectionRemote": "Server=111.25.45.48;Database=DBName;User ID=username;Password=password;MultipleActiveResultSets=true;Pooling=true;Max Pool Size=200",
    "MSSQLConnectionLocal": "Data Source=LocalServerName;Initial Catalog=DBName;Trusted_Connection=True;Connect Timeout=3000;TrustServerCertificate=True;",
    "PostgreSQL": "Server=111.25.45.48;Port=5432;Database=DBName;User ID=username;Password=password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    // Set mininum levels to record
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
      }
    },
    // If you want to save to SQL Server
    //"WriteTo": [
    //  {
    //    "Name": "MSSqlServer",
    //    "Args": {
    //      "connectionString": "Server=Server-Name;database=DatabaseName;Trusted_Connection=True;MultipleActiveResultSets=true",
    //      "tableName": "Logs",
    //      "autoCreateSqlTable": true
    //    }
    //  }
    //],
    // Allows user to filter out certains logs
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "EndsWith(RequestPath, '/healthcheck') or EndsWith(RequestPath, '/metrics')  or EndsWith(RequestPath, '/swagger/index.html') or Contains(Method,'OPTIONS')"
        }
      }
    ]
  },
  // Set ElasticSearch and Seq Links
  "ElasticConfiguration": {
    "Uri": "localhost:9200"
  },
  "SeqConfiguration": {
    "Uri": "localhost:5431"
  },
  "AllowedHosts": "*"
}
